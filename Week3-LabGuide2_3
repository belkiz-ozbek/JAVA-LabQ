#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	
	double side;
	double area;
	double perimeter;
	
	printf("Enter one side of square:\n");
	scanf("%lf",&side);
	
	area=side*side;
	printf("The area of the square is:%f\n",area);
	
	perimeter=4*side;
	printf("The perimeter of the square is:%f",perimeter);
	
	
	return 0;
}
